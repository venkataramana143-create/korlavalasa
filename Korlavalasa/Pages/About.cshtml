@page
@model AboutModel
@{
    ViewData["Title"] = "About Korlavalasa";
}

 

<div class="about-header">
    <div class="container">
        <h1 class="page-title text-center mb-3">
            <i class="fas fa-info-circle me-2"></i>About Korlavalasa Village
        </h1>
        <p class="text-center mb-0 opacity-75" style="font-size: clamp(1rem, 2vw, 1.2rem);">
            Discover the rich heritage and vibrant community of our village
        </p>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Village Overview -->
            <div class="card">
                <div class="card-body">
                    <h2 class="section-title">కోర్లవలసకు స్వాగతం</h2>
                    <p class="lead-text">@Model.VillageInfo.AboutText</p>
                </div>
            </div>

            <!-- History Section -->
            <div class="card">
                <div class="card-body">
                    <h3 class="section-title">
                        <i class="fas fa-history me-2"></i>మా గొప్ప చరిత్ర
                    </h3>
                    <p class="card-text fs-6">@Model.VillageInfo.History</p>

                    <div class="history-section mt-4">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="feature-item">
                                    <i class="fas fa-landmark"></i>
                                    <h5 class="fw-bold">చారిత్రక ప్రాముఖ్యత</h5>
                                    <p class="text-muted mb-0">కోర్లవలస తరతరాలుగా వ్యవసాయ శ్రేష్ఠతకు కేంద్రంగా ఉంది, ఆధునిక పద్ధతులను అవలంబిస్తూ సంప్రదాయ వ్యవసాయ పద్ధతులను కాపాడుకుంటుంది.</p>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="feature-item">
                                    <i class="fas fa-people-arrows"></i>
                                    <h5 class="fw-bold">సాంస్కృతిక వారసత్వం</h5>
                                    <p class="text-muted mb-0">మా గ్రామం ప్రాచీన సంప్రదాయాలు, పండుగలు మరియు సామాజిక ఆచారాలను కాపాడుకుంటుంది, ఇవి శతాబ్దాలుగా తరతరాలుగా అందించబడ్డాయి.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Village Leadership -->
            <div class="card">
                <div class="card-body">
                    <h3 class="section-title">
                        <i class="fas fa-users me-2"></i>గ్రామ నాయకత్వం
                    </h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="leadership-card">
                                <i class="fas fa-user-tie"></i>
                                <h5 class="fw-bold mb-2">సర్పంచ్</h5>
                                <p class="fs-5 fw-bold text-success mb-1">@Model.VillageInfo.SarpanchName</p>
                                <p class="text-muted mb-0">గ్రామ ప్రధాన ప్రతినిధి</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="leadership-card">
                                <i class="fas fa-user-shield"></i>
                                <p class="text-muted mb-0">గ్రామ సెక్రటరీ</p>
                                <p class="fs-5 fw-bold text-success mb-1">@Model.VillageInfo.SecretaryName</p>
                                <p class="text-muted mb-0">గ్రామపంచాయితీ సెక్రటరీ</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Facts -->
            <div class="card">
                <div class="card-body">
                    <h5 class="section-title mb-3">
                        <i class="fas fa-chart-bar me-2"></i>గ్రామ గణాంకాలు
                    </h5>
                    <div class="stats-list">
                        <div class="stat-item">
                            <span>జనాభా</span>
                            <span class="stat-badge">@Model.VillageInfo.Population</span>
                        </div>
                        <div class="stat-item">
                            <span>విస్తీర్ణం</span>
                            <span class="stat-badge">@Model.VillageInfo.Area చ.కి.మీ</span>
                        </div>
                        <div class="stat-item">
                            <span>కుటుంబాలు</span>
                            <span class="stat-badge">~250</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Agricultural Profile -->
            <div class="card">
                <div class="card-body">
                    <h5 class="section-title mb-3">
                        <i class="fas fa-seedling me-2"></i>వ్యవసాయ ప్రొఫైల్
                    </h5>
                    <p class="fw-bold mb-3">ప్రధాన పంటలు: <span class="text-success">@Model.VillageInfo.MainCrops</span></p>

                    <div class="crop-progress">
                        <div class="d-flex justify-content-between mb-1">
                            <small>వరి</small>
                            <small class="fw-bold">60%</small>
                        </div>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-success" style="width: 60%"></div>
                        </div>

                        <div class="d-flex justify-content-between mb-1">
                            <small>స్వీట్ కార్న్</small>
                            <small class="fw-bold">25%</small>
                        </div>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-info" style="width: 25%"></div>
                        </div>

                        <div class="d-flex justify-content-between mb-1">
                            <small>ఇతర పంటలు</small>
                            <small class="fw-bold">15%</small>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-warning" style="width: 15%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Location -->
            <div class="card">
                <div class="card-body">
                    <h5 class="section-title mb-3">
                        <i class="fas fa-map me-2"></i>స్థానం
                    </h5>
                    <div class="map-placeholder">
                        <i class="fas fa-map-marked-alt"></i>
                        <p class="fw-bold mb-1">కోర్లవలస గ్రామం</p>
                        <small class="text-muted">
                            విజయనగరం జిల్లా<br>
                            ఆంధ్ర ప్రదేశ్ - 532127
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Village Features -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="section-title text-center mb-4">కోర్లవలసను ప్రత్యేకమైనదిగా చేస్తున్నవి</h3>
                    <div class="row">
                        <div class="col-md-6 col-6">
                            <div class="feature-item">
                                <i class="fas fa-temple"></i>
                                <h6 class="fw-bold">ప్రాచీన దేవాలయాలు</h6>
                                <p class="text-muted mb-0 small">అనన్యమైన నిర్మాణ శైలితో 8 చారిత్రక దేవాలయాలు</p>
                            </div>
                        </div>
                        <div class="col-md-6 col-6">
                            <div class="feature-item">
                                <i class="fas fa-water"></i>
                                <h6 class="fw-bold">నీటి వనరులు</h6>
                                <p class="text-muted mb-0 small">నీటిపారుదల కోసం సమృద్ధిగా సహజ నీటి వనరులు</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Add interactive animations
    document.addEventListener('DOMContentLoaded', function() {
        // Animate progress bars on scroll
        const progressBars = document.querySelectorAll('.progress-bar');

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const width = entry.target.style.width;
                    entry.target.style.width = '0';
                    setTimeout(() => {
                        entry.target.style.width = width;
                        entry.target.style.transition = 'width 1.5s ease-in-out';
                    }, 300);
                }
            });
        }, { threshold: 0.5 });

        progressBars.forEach(bar => observer.observe(bar));

        // Add hover effects to cards
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
            });
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    });
</script>

